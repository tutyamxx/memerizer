{
    "diff": true,
    "recursive": true,
    "extension": [ "js", "cjs", "mjs"],
    "package": "./package.json",
    "reporter": "nyan",
    "slow": "75",
    "timeout": "20000",
    "ui": "bdd",
    "watch-files": ["lib/**/*.js", "test/**/*.js"],
    "watch-ignore": ["lib/vendor"],
    "exit": true
}
